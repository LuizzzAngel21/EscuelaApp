@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admisión 2026 - Colegio Alfred Nobel</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #f4f6f8;">

    <a href="/" class="btn btn-outline-secondary position-absolute top-0 start-0 m-4 text-decoration-none border-0 fw-bold" style="z-index: 10;">
        <i class="fa-solid fa-arrow-left me-2"></i> Volver
    </a>

    <div class="admission-wrapper d-flex justify-content-center align-items-center min-vh-100 p-4">
        <section class="admission-section w-100" style="max-width: 720px;">
            <div class="admission-card bg-white p-5 rounded-4 shadow-lg">

                <div class="text-center mb-4">
                    <i class="fa-solid fa-graduation-cap fa-3x" style="color: #1f3c88;"></i>
                    <h2 class="mt-3 fw-bold" style="color: #1f3c88; font-family: 'Playfair Display', serif;">Solicitud de Admisión</h2>
                    <p class="text-muted">Complete el formulario para iniciar el proceso de postulación.</p>
                </div>

                <form id="admisionForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">DNI ESTUDIANTE</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-id-card"></i></span>
                                <input type="text" class="form-control border-start-0 ps-0" id="dni" maxlength="8" required pattern="[0-9]{8}" placeholder="8 dígitos">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">NACIMIENTO</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-calendar"></i></span>
                                <input type="text" class="form-control border-start-0 ps-0 bg-white" id="fechaNacimiento" required placeholder="Seleccionar fecha" readonly>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">NOMBRES</label>
                            <input type="text" class="form-control" id="nombres" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">APELLIDOS</label>
                            <input type="text" class="form-control" id="apellidos" required>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">TELÉFONO APODERADO</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-mobile-screen"></i></span>
                                <input type="text" class="form-control border-start-0 ps-0" id="telefono" maxlength="9" required pattern="[0-9]{9}" placeholder="9 dígitos">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">EMAIL APODERADO</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-envelope"></i></span>
                                <input type="email" class="form-control border-start-0 ps-0" id="correo" required placeholder="Para enviar token">
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <div class="p-3 bg-light rounded-3 border">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-dark">NIVEL ACADÉMICO</label>
                                        <select id="nivel" class="form-select" required>
                                            <option value="">Seleccione...</option>
                                            <option value="Secundaria">Secundaria</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-dark">GRADO</label>
                                        <select id="grado" class="form-select" required disabled>
                                            <option value="">Esperando Nivel...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary py-3 fw-bold shadow-sm" style="background-color: #1f3c88; border: none;">
                            ENVIAR SOLICITUD <i class="fa-regular fa-paper-plane ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script src="~/js/config.js"></script>

    <script src="~/js/matricula.js"></script>

</body>
</html>
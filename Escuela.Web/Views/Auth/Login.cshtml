@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login | Alfred Nobel</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>

    <div class="login-container">

        <div class="login-logo">
            <img src="~/img/logo.jpeg" alt="Logo Alfred Nobel">
        </div>

        <header class="login-header">
            <h1>Alfred Nobel</h1>
            <p>
                COLEGIO PREUNIVERSITARIO
                <span>DESDE 1998</span>
            </p>
        </header>

        <main class="login-box">
            <label>Usuario</label>
            <input type="email" id="txtEmail" placeholder="Ingrese su correo" class="form-control">

            <label>Contraseña</label>
            <input type="password" id="txtPassword" placeholder="Ingrese su contraseña" class="form-control">

            <button type="button" id="btnIngresar" onclick="login()">INGRESAR</button>

        </main>

        <footer class="login-footer">
            <div class="footer-legal">
                <a href="#">Políticas de privacidad</a>
                ·
                <a href="#">Términos y Condiciones</a>
            </div>
        </footer>

    </div>

    <script src="~/js/config.js"></script>
    <script src="~/js/auth.js"></script>

</body>
</html>
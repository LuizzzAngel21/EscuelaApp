@{
    ViewData["Title"] = "Gestión Académica";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row g-4">
    <div class="col-md-4">
        <div class="card card-admin h-100 shadow-sm border-0">
            <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-3 px-3 pt-3">
                <h5 class="fw-bold text-institutional m-0">Niveles y Grados</h5>
                <button class="btn btn-sm btn-outline-admin rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#modalGrado">
                    <i class="fa-solid fa-plus me-1"></i>Nuevo
                </button>
            </div>

            <div class="list-group list-group-flush px-2 pb-3" id="listaGrados">
                <div class="text-center py-5 text-muted">
                    <div class="spinner-border spinner-border-sm text-primary mb-2"></div>
                    <p class="small mb-0">Cargando estructura...</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card card-admin h-100 shadow-sm border-0">
            <div class="card-header bg-white border-bottom pt-4 pb-3 px-4 d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold text-institutional m-0" id="tituloDetalle">Secciones</h5>
                    <p class="text-muted small mb-0" id="subtituloDetalle">Seleccione un grado para gestionar</p>
                </div>
                <button class="btn btn-institutional shadow-sm" id="btnNuevaSeccion" disabled onclick="abrirModalSeccion()">
                    <i class="fa-solid fa-layer-group me-2"></i>Nueva Sección
                </button>
            </div>

            <div class="card-body p-0">
                <div id="emptyState" class="text-center py-5 mt-4">
                    <div class="mb-3">
                        <i class="fa-solid fa-school fa-3x text-muted opacity-25"></i>
                    </div>
                    <h6 class="text-muted fw-bold">Esperando selección</h6>
                    <p class="small text-muted">Seleccione un grado del menú izquierdo.</p>
                </div>

                <div id="contenedorTabla" style="display:none;" class="p-4">
                    <div class="table-responsive border rounded-3">
                        <table class="table align-middle table-hover mb-0">
                            <thead class="bg-light">
                                <tr class="text-center">
                                    <th style="width: 20%;" class="py-3 text-secondary text-uppercase small fw-bold">Sección</th>
                                    <th style="width: 40%;" class="py-3 text-secondary text-uppercase small fw-bold">Aforo</th>
                                    <th style="width: 20%;" class="py-3 text-secondary text-uppercase small fw-bold">Estado</th>
                                    <th style="width: 20%;" class="py-3 text-secondary text-uppercase small fw-bold">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="bodySecciones" class="text-center">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalGrado" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light border-bottom-0">
                <h5 class="modal-title fw-bold text-institutional">Registrar Grado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="formGrado">
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">NOMBRE DEL GRADO</label>
                        <input type="text" class="form-control form-control-lg fs-6" id="txtNombreGrado" placeholder="Ej: 1ro Secundaria" required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">NIVEL ACADÉMICO</label>
                        <select class="form-select form-select-lg fs-6" id="cboNivelGrado">
                            <option value="Secundaria">Secundaria</option>
                            <option value="Primaria">Primaria</option>
                        </select>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-institutional py-2">Guardar Grado</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalSeccion" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light border-bottom-0">
                <h5 class="modal-title fw-bold text-institutional">Nueva Sección</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="alert alert-info border-0 d-flex align-items-center mb-4">
                    <i class="fa-solid fa-circle-info me-2"></i>
                    <div>Agregando aula para: <strong id="lblGradoModal">...</strong></div>
                </div>
                <form id="formSeccion">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label small fw-bold text-muted">NOMBRE / LETRA</label>
                            <input type="text" class="form-control" id="txtNombreSeccion" placeholder="Ej: A, B, Azul" required>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small fw-bold text-muted">AFORO</label>
                            <input type="number" class="form-control" id="txtCapacidad" value="30" min="1" required>
                        </div>
                    </div>
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-institutional py-2">Crear Sección</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/admin/grados.js"></script>
}
@{
    ViewData["Title"] = "Mis Cursos";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}

<link rel="stylesheet" href="~/css/estudiante.css" />

<div class="container-fluid p-0">

    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h2 class="fw-bold text-dark mb-1" style="letter-spacing: -0.5px;">Mis Cursos</h2>
            <p class="text-muted mb-0 small">Accede a tus materias, tareas y calificaciones.</p>
        </div>
        <div class="d-none d-md-block">
            <span class="badge badge-clean">
                <i class="fa-regular fa-calendar me-2"></i>Periodo 2026-I
            </span>
        </div>
    </div>

    <div id="loaderCursos" class="text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2 text-muted small">Cargando asignaturas...</p>
    </div>

    <div id="gridCursos" class="row g-4" style="display:none;">
    </div>

    <div id="emptyStateCursos" class="text-center py-5" style="display:none;">
        <div class="bg-light rounded-circle d-inline-flex p-4 mb-3 text-muted opacity-50">
            <i class="fa-solid fa-folder-open display-4"></i>
        </div>
        <h5 class="text-dark fw-bold">No tienes cursos asignados</h5>
        <p class="text-muted small">Si crees que es un error, contacta a coordinación.</p>
    </div>
</div>

@section Scripts {
    <script src="~/js/estudiante/cursos.js"></script>
}
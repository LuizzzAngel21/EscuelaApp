@{
    ViewData["Title"] = "Mis Pensiones";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Tesorería y Pagos</h2>
            <p class="text-muted mb-0">Gestiona tus pensiones y realiza pagos en línea.</p>
        </div>
        <div class="d-none d-md-block">
            <span class="badge bg-white text-secondary border px-3 py-2 rounded-pill shadow-sm">
                <i class="fa-brands fa-cc-visa me-2 text-primary"></i>Pagos Habilitados
            </span>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3 mb-md-0">
            <div class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-danger">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-uppercase text-muted small fw-bold mb-1">Deuda Total Exigible</p>
                        <h3 class="fw-bold mb-0 text-danger" id="lblDeudaTotal">S/ 0.00</h3>
                    </div>
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3">
                        <i class="fa-solid fa-money-bill-wave fa-xl"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-success">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-uppercase text-muted small fw-bold mb-1">Estado de Cuenta</p>
                        <h4 class="fw-bold mb-0 text-dark" id="lblEstadoCuenta">
                            <span class="spinner-border spinner-border-sm text-primary" role="status"></span>
                        </h4>
                    </div>
                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-3">
                        <i class="fa-solid fa-file-invoice fa-xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
            <h6 class="fw-bold text-primary mb-0">
                <i class="fa-solid fa-list-check me-2"></i>Cronograma de Pagos
            </h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th class="ps-4 py-3">Concepto / Mes</th>
                            <th class="py-3">Vencimiento</th>
                            <th class="py-3 text-end">Monto Base</th>
                            <th class="py-3 text-end text-danger">Mora</th>
                            <th class="py-3 text-end fw-bold">Total</th>
                            <th class="py-3 text-center">Estado</th>
                            <th class="py-3 text-center pe-4">Acción</th>
                        </tr>
                    </thead>
                    <tbody id="tablaPensiones">
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="spinner-border text-primary" role="status"></div>
                                <p class="text-muted mt-2 small">Consultando tesorería...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalPagar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold"><i class="fa-solid fa-credit-card me-2"></i>Pasarela de Pago</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary" id="txtMontoPagar">S/ 0.00</h2>
                    <p class="text-muted small" id="txtConceptoPagar">Pension...</p>
                </div>

                <form id="formPago">
                    <input type="hidden" id="hdnPensionId" />

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-uppercase">Número de Tarjeta</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white text-muted"><i class="fa-brands fa-cc-visa"></i></span>
                            <input type="text" class="form-control" id="txtTarjeta" placeholder="4xxx xxxx xxxx xxxx" maxlength="19">
                        </div>
                        <div class="form-text small text-primary">
                            <i class="fa-solid fa-circle-info me-1"></i>Simulación: Usa una tarjeta que inicie con <strong>4</strong>.
                        </div>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <label class="form-label fw-bold small text-uppercase">Expira</label>
                            <input type="text" class="form-control" placeholder="MM/YY">
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small text-uppercase">CVV</label>
                            <input type="password" class="form-control" placeholder="123" maxlength="3">
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="button" class="btn btn-primary btn-lg rounded-pill shadow-sm" onclick="procesarPago()">
                            <i class="fa-solid fa-lock me-2"></i>Pagar Ahora
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/estudiante/pagos.js"></script>
}
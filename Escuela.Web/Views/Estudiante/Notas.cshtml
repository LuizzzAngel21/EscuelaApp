@{
    ViewData["Title"] = "Libreta de Notas";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}

<link rel="stylesheet" href="~/css/estudiante.css" />

<div class="container-fluid p-0">

    <div class="d-flex justify-content-between align-items-center mb-4 d-print-none">
        <div>
            <h2 class="fw-bold text-dark mb-1">Libreta de Notas</h2>
            <p class="text-muted small mb-0">Visualización en tiempo real</p>
        </div>
        <div class="text-end">
            <button class="btn btn-outline-primary btn-sm rounded-pill px-3" onclick="imprimirLibreta()">
                <i class="fa-solid fa-print me-2"></i> Imprimir Oficial
            </button>
        </div>
    </div>

    <div id="areaImpresion">

        <div class="header-impresion">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-uppercase mb-0 text-dark" style="letter-spacing: -0.5px;">Institución Educativa "Alfred Nobel"</h2>
                <p class="mb-0 text-muted small">Av. Universitaria 5555, Lima | R.D. 1234-2025</p>
            </div>

            <div class="row g-0 p-3 rounded-3" style="background-color: #f8fafc; border: 1px solid #e2e8f0;">
                <div class="col-8">
                    <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Estudiante</small>
                    <div class="fw-bold fs-5 text-dark" id="printEstudiante">CARGANDO...</div>
                </div>
                <div class="col-4 text-end">
                    <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Fecha Emisión</small>
                    <div class="fw-bold fs-6 text-dark" id="printFecha">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="col-12 mt-2 pt-2 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-primary">LIBRETA DE NOTAS @DateTime.Now.Year</span>
                        <small class="text-muted">Nivel Secundaria</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="tablaLibreta">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase text-muted small fw-bold" style="width: 30%;">Asignatura</th>
                            <th class="text-center py-3 text-uppercase text-muted small fw-bold" style="width: 10%;">Bim. I</th>
                            <th class="text-center py-3 text-uppercase text-muted small fw-bold" style="width: 10%;">Bim. II</th>
                            <th class="text-center py-3 text-uppercase text-muted small fw-bold" style="width: 10%;">Bim. III</th>
                            <th class="text-center py-3 text-uppercase text-muted small fw-bold" style="width: 10%;">Bim. IV</th>
                            <th class="text-center py-3 text-uppercase text-dark small fw-bold bg-white border-start" style="width: 10%;">Prom.</th>
                            <th class="text-end pe-4 py-3 text-uppercase text-muted small fw-bold" style="width: 15%;">Estado</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoLibreta" class="bg-white">
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="spinner-border text-primary" role="status"></div>
                                <p class="mt-2 text-muted small">Cargando notas...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="card-footer bg-white border-top py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fa-solid fa-circle-info me-1"></i>
                        <span class="fw-bold">--</span> indica nota pendiente.
                    </small>
                    <div class="d-flex gap-2">
                        <small class="text-muted">Documento generado digitalmente.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="header-impresion mt-5 pt-5 border-0">
            <div class="d-flex justify-content-around text-center" style="margin-top: 50px;">
                <div style="width: 200px; border-top: 1px solid #334155; padding-top: 5px;">
                    <small class="fw-bold text-dark">Tutor(a)</small>
                </div>
                <div style="width: 200px; border-top: 1px solid #334155; padding-top: 5px;">
                    <small class="fw-bold text-dark">Dirección</small>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/estudiante/notas.js"></script>
}
@{
    ViewData["Title"] = "Resumen Académico";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}

<div class="container-fluid p-0">
    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark" style="font-family: var(--font-heading);">
                        <i class="fa-regular fa-calendar-check me-2 text-primary"></i>Agenda de Hoy
                    </h5>
                    <span class="badge bg-light text-dark border" id="lblFechaHoy">Cargando fecha...</span>
                </div>
                <div class="card-body">
                    <div id="timeline-container" class="timeline-container mt-2">
                        <p class="text-muted text-center py-5">Cargando horario...</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 d-flex flex-column gap-4">

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 text-center position-relative overflow-hidden" id="cardFinanzas">
                    <div id="loaderFinanzas">
                        <div class="spinner-border text-primary spinner-border-sm" role="status"></div>
                        <small class="ms-2">Verificando pagos...</small>
                    </div>
                    <div id="contentFinanzas" style="display:none;">
                        <div class="mb-3"><i id="iconFinanzas" class="fa-solid fa-circle-check display-4"></i></div>
                        <h6 class="text-uppercase text-muted fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Estado Financiero</h6>
                        <h3 class="fw-bold mb-0" id="lblEstadoFinanciero">Al Día</h3>
                        <p class="mb-3 mt-2 fw-bold" id="lblMontoDeuda" style="font-size: 1.2rem;">S/ 0.00</p>
                        <a href="/Estudiante/Pagos" class="btn btn-sm w-100 rounded-pill fw-medium" id="btnAccionFinanzas">Ver Historial</a>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm flex-grow-1">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="mb-0 fw-bold text-dark" style="font-family: var(--font-heading);">
                        <i class="fa-solid fa-bullhorn me-2 text-warning"></i>Comunicados
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div id="lista-comunicados" class="list-group list-group-flush">
                        <p class="text-center text-muted py-4 small">Cargando avisos...</p>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-center pb-3">
                    <a href="javascript:void(0)" class="text-decoration-none small text-muted fw-medium" style="cursor: default; opacity: 0.6;">
                        Ver todos los avisos <i class="fa-solid fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="modalComunicado" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white border-0">
                <h5 class="modal-title fw-bold" id="modalTitulo">Título del Aviso</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="badge bg-light text-primary border" id="modalAutor">Autor</span>
                    <small class="text-muted" id="modalFecha">Fecha</small>
                </div>
                <p class="text-secondary" id="modalContenido" style="white-space: pre-wrap;">
                    Aquí va el contenido...
                </p>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-light w-100 rounded-pill" data-bs-dismiss="modal">Entendido</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/estudiante/inicio.js"></script>
}
@{
    ViewData["Title"] = "Resumen Académico";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}

<link rel="stylesheet" href="~/css/estudiante.css" />

<div class="container-fluid p-0">

    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Resumen Académico</h2>
            <p class="text-muted small mb-0">Bienvenido a tu panel de control.</p>
        </div>
        <div id="lblFechaHoy" class="text-muted fw-medium small">
            Cargando fecha...
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-dark">
                        <i class="fa-regular fa-calendar me-2 text-primary"></i>Agenda de Hoy
                    </h6>
                </div>
                <div class="card-body">
                    <div id="timeline-container" class="mt-2">
                        <p class="text-muted text-center py-5 small">Cargando tu horario...</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 d-flex flex-column gap-4">

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 text-center" id="cardFinanzas">
                    <div id="loaderFinanzas">
                        <div class="spinner-border text-primary spinner-border-sm" role="status"></div>
                    </div>
                    <div id="contentFinanzas" style="display:none;">
                        <h6 class="text-uppercase text-muted fw-bold mb-3" style="font-size: 0.65rem; letter-spacing: 1px;">Estado Financiero</h6>

                        <div class="mb-2">
                            <i id="iconFinanzas" class="fa-solid fa-shield-check fs-1 mb-2"></i>
                            <h4 class="fw-bold mb-0" id="lblEstadoFinanciero">...</h4>
                        </div>

                        <p class="text-muted mb-3 small" id="lblMontoDeuda">...</p>

                        <a href="/Estudiante/Pagos" class="btn btn-sm w-100 rounded-pill fw-medium" id="btnAccionFinanzas">Ver Detalles</a>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm flex-grow-1">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="mb-0 fw-bold text-dark">
                        <i class="fa-regular fa-bell me-2 text-primary"></i>Avisos Recientes
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div id="lista-comunicados" class="list-group list-group-flush">
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-center py-3">
                    <button class="btn btn-light btn-sm w-100 rounded-pill text-muted fw-medium" onclick="abrirHistorialComunicados()">
                        Ver histórico
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalComunicado" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-dark" id="modalTitulo">Aviso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="d-flex align-items-center mb-3 text-muted small">
                    <i class="fa-solid fa-user-pen me-2"></i>
                    <span id="modalAutor" class="me-3 fw-bold">Autor</span>
                    <span id="modalFecha">Fecha</span>
                </div>
                <p class="text-dark" id="modalContenido" style="white-space: pre-wrap; line-height: 1.6;"></p>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-light border w-100" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalHistorialComunicados" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-dark">Buzón de Comunicados</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body bg-light">

                <div class="bg-white p-4 rounded-3 border border-light shadow-sm mb-4">
                    <div class="row align-items-end g-3">
                        <div class="col-sm-8">
                            <label for="filtroFechaComunicado" class="form-label small fw-bold text-uppercase text-muted mb-1" style="font-size: 0.7rem; letter-spacing: 0.5px;">
                                Buscar por fecha
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 text-muted ps-3">
                                    <i class="fa-regular fa-calendar"></i>
                                </span>
                                <input type="date" id="filtroFechaComunicado" class="form-control border-start-0 ps-2" onchange="filtrarComunicadosPorFecha()" style="border-color: #dee2e6;">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <button class="btn btn-light border w-100 fw-medium text-muted" onclick="limpiarFiltroComunicados()">
                                <i class="fa-solid fa-rotate-left me-2 small"></i>Ver todos
                            </button>
                        </div>
                    </div>
                </div>

                <div id="contenedor-historial-comunicados"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/estudiante/inicio.js"></script>
}
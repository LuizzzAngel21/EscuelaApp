@{
    ViewData["Title"] = "Aula Virtual";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}

<input type="hidden" id="hdnCursoId" value="@Context.Request.Query["cursoId"]" />

<div class="container-fluid p-0">

    <div class="card border-0 shadow-sm mb-4" style="border-radius: 0 0 16px 16px;">
        <div class="card-body p-4 p-lg-5 bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <a href="/Estudiante/Cursos" class="text-muted text-decoration-none small fw-bold text-uppercase mb-2 d-inline-block">
                        <i class="fa-solid fa-arrow-left me-1"></i> Mis Cursos
                    </a>
                    <h2 class="fw-bold text-dark mb-1" style="letter-spacing: -0.5px;" id="lblNombreCurso">Cargando curso...</h2>

                    <div class="d-flex align-items-center text-secondary mt-3">
                        <div class="avatar-circle me-2" style="width: 28px; height: 28px; font-size: 0.8rem; background-color: #f1f5f9; color: #64748b;">
                            <i class="fa-solid fa-user-tie"></i>
                        </div>
                        <span id="lblNombreDocente" class="fw-medium small text-muted">...</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white p-0 border-0">
            <ul class="nav nav-tabs nav-justified border-0" id="aulaTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tareas-tab" data-bs-toggle="tab" data-bs-target="#tareas-pane" type="button">
                        Tareas
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="materiales-tab" data-bs-toggle="tab" data-bs-target="#materiales-pane" type="button">
                        Materiales
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="notas-tab" data-bs-toggle="tab" data-bs-target="#notas-pane" type="button">
                        Calificaciones
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div class="tab-content px-3 pb-5" id="aulaTabsContent">

        <div class="tab-pane fade show active" id="tareas-pane" role="tabpanel">
            <div id="listaTareas" class="row g-4">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="materiales-pane" role="tabpanel">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="card border-0 shadow-sm mt-3">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h6 class="fw-bold mb-0 text-dark">Recursos Compartidos</h6>
                        </div>
                        <div class="card-body p-0">
                            <div id="listaMateriales" class="list-group list-group-flush">
                                <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="notas-pane" role="tabpanel">

            <div id="loadingNotas" class="text-center py-5">
                <div class="spinner-border text-primary"></div>
                <p class="mt-2 text-muted small">Calculando rendimiento académico...</p>
            </div>

            <div id="contenidoBoleta" style="display:none;">
                <div class="row justify-content-center">
                    <div class="col-lg-9">

                        <div id="contenedorBoleta"></div>

                        <div id="emptyStateNotas" class="text-center py-5 d-none">
                            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                                <i class="fa-solid fa-book-open text-muted opacity-50 display-4"></i>
                            </div>
                            <h6 class="fw-bold text-dark">Sin Registros</h6>
                            <p class="text-muted small">El docente aún no ha publicado calificaciones.</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="modalEntrega" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold text-dark">Entregar Tarea</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="formEntrega">
                    <input type="hidden" id="hdnTareaId" />
                    <div class="mb-4 text-center">
                        <h6 class="fw-bold text-primary mb-1" id="lblTituloTarea">...</h6>
                        <span class="badge bg-light text-muted">Subir Archivo</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted text-uppercase">Seleccionar</label>
                        <input type="file" class="form-control" id="fileEntrega" required>
                        <div class="form-text small">PDF, Word o Imagen. Máx 5MB.</div>
                    </div>
                    <div id="progresoEntrega" class="progress mt-3" style="height: 4px; display:none;">
                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                    </div>
                    <div id="mensajeError" class="alert alert-danger mt-3 small py-2 border-0 bg-danger bg-opacity-10 text-danger" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer border-0 bg-white">
                <button type="button" class="btn btn-white border" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary px-4" onclick="enviarTarea()">Enviar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/estudiante/aula.js"></script>
}
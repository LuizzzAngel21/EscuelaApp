@{
    ViewData["Title"] = "Control de Asistencia";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<input type="hidden" id="hdnCursoId" value="@Context.Request.Query["cursoId"]" />

<div class="container-fluid p-0">

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-4">
            <div class="row align-items-center g-3">

                <div class="col-md-4">
                    <a href="/Docente/Inicio" class="text-decoration-none text-muted small mb-2 d-inline-block fw-bold">
                        <i class="fa-solid fa-arrow-left me-1"></i> VOLVER AL DASHBOARD
                    </a>
                    <h4 class="fw-bold text-dark mb-0" id="lblCursoNombre">Cargando curso...</h4>
                    <span class="badge bg-light text-primary border mt-2" id="lblCursoGrado">...</span>
                </div>

                <div class="col-md-5">
                    <div class="d-flex flex-column align-items-center">
                        <label class="form-label small fw-bold text-muted text-uppercase mb-1" style="font-size:0.7rem;">Configuración de Toma</label>
                        <div class="d-flex gap-2">
                            <input type="date" id="txtFechaAsistencia" class="form-control form-control-lg text-center input-fecha-elegant shadow-sm" style="max-width: 170px; font-size: 0.9rem;">

                            <select id="cmbSeccionFilter" class="form-select form-select-lg shadow-sm text-primary fw-bold" style="max-width: 140px; font-size: 0.9rem; border: 1px solid #e2e8f0;">
                                <option value="">Cargando...</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="d-flex flex-column align-items-end">
                        <div id="panelEstadoRegistro" class="mb-2"></div>
                        <button class="btn btn-primary px-4 py-2 shadow-sm rounded-pill fw-bold" onclick="guardarAsistencia()" id="btnGuardar">
                            <i class="fa-solid fa-floppy-disk me-2"></i>Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4 text-center">
        <div class="col-6 col-md-3">
            <div class="card card-counter border-left-success py-3">
                <h6 class="text-muted small text-uppercase mb-1 fw-bold">Presentes</h6>
                <h2 class="fw-bold text-success mb-0" id="count-P">0</h2>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-counter border-left-warning py-3">
                <h6 class="text-muted small text-uppercase mb-1 fw-bold">Tardanzas</h6>
                <h2 class="fw-bold text-warning mb-0" id="count-T">0</h2>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-counter border-left-danger py-3">
                <h6 class="text-muted small text-uppercase mb-1 fw-bold">Faltas</h6>
                <h2 class="fw-bold text-danger mb-0" id="count-F">0</h2>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-counter border-left-info py-3">
                <h6 class="text-muted small text-uppercase mb-1 fw-bold">Justificados</h6>
                <h2 class="fw-bold text-primary mb-0" id="count-J">0</h2>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fa-solid fa-users-viewfinder me-2"></i>Nómina de Estudiantes
                </h6>
                <small class="text-muted fst-italic">Se muestran alumnos de la sección seleccionada.</small>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 text-uppercase text-muted small fw-bold py-3">Estudiante</th>
                            <th class="text-center text-uppercase text-muted small fw-bold py-3" style="width: 300px;">Estado</th>
                            <th class="text-uppercase text-muted small fw-bold py-3 pe-4" style="width: 250px;">Observación</th>
                        </tr>
                    </thead>
                    <tbody id="lista-asistencia" class="bg-white">
                        <tr><td colspan="3" class="text-center py-5 text-muted">Inicializando...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/docente/asistencia.js"></script>
}
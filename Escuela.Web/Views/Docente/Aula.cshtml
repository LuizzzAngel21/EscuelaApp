@{
    ViewData["Title"] = "Gestión del Curso";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<input type="hidden" id="hdnCursoId" value="@Context.Request.Query["cursoId"]" />

<div class="container-fluid px-4 py-4">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <a href="/Docente/Cursos" class="btn btn-white border shadow-sm rounded-circle me-3" title="Volver a Cursos" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                <i class="fa-solid fa-arrow-left text-muted"></i>
            </a>
            <div>
                <h3 class="fw-bold text-dark mb-0" id="lblNombreCurso">Cargando curso...</h3>
                <p class="text-muted small mb-0" id="lblGradoCurso">...</p>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 12px; min-height: 80vh;">

        <div class="card-header bg-white border-bottom px-4 pt-4 pb-0">
            <ul class="nav nav-tabs card-header-tabs" id="aulaTabs" role="tablist">
                <li class="nav-item me-3" role="presentation">
                    <button class="nav-link active py-3" id="tab-materiales" data-bs-toggle="tab" data-bs-target="#panel-materiales" type="button" role="tab">
                        <i class="fa-regular fa-folder-open me-2"></i>Materiales
                    </button>
                </li>
                <li class="nav-item me-3" role="presentation">
                    <button class="nav-link py-3" id="tab-tareas" data-bs-toggle="tab" data-bs-target="#panel-tareas" type="button" role="tab">
                        <i class="fa-solid fa-list-check me-2"></i>Asignaciones
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link py-3" id="tab-criterios" data-bs-toggle="tab" data-bs-target="#panel-criterios" type="button" role="tab">
                        <i class="fa-solid fa-sliders me-2"></i>Configuración Evaluación
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-4 bg-light bg-opacity-25">
            <div class="tab-content" id="aulaTabsContent">

                <div class="tab-pane fade show active" id="panel-materiales" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="fw-bold text-dark mb-0">Recursos Educativos</h5>
                        <button class="btn text-white shadow-sm px-3" style="background-color: var(--color-institutional);" data-bs-toggle="modal" data-bs-target="#modalSubirMaterial">
                            <i class="fa-solid fa-cloud-arrow-up me-2"></i>Subir Nuevo
                        </button>
                    </div>
                    <div class="row g-3" id="lista-materiales"></div>
                </div>

                <div class="tab-pane fade" id="panel-tareas" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="fw-bold text-dark mb-0">Tareas y Actividades</h5>
                        <div>
                            <button class="btn btn-white border shadow-sm me-2 text-dark fw-bold" onclick="calcularPromediosTareas()">
                                <i class="fa-solid fa-calculator me-2 text-muted"></i>Promedios
                            </button>
                            <button class="btn text-white shadow-sm px-3" style="background-color: var(--color-institutional);" data-bs-toggle="modal" data-bs-target="#modalCrearTarea">
                                <i class="fa-solid fa-plus me-2"></i>Crear Tarea
                            </button>
                        </div>
                    </div>
                    <div class="list-group list-group-flush shadow-sm rounded-3 border-0 bg-white" id="lista-tareas"></div>
                </div>

                <div class="tab-pane fade" id="panel-criterios" role="tabpanel">
                    <div class="row g-4">
                        <div class="col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body p-4">
                                    <h6 class="fw-bold text-dark mb-4 pb-2 border-bottom">
                                        <i class="fa-solid fa-plus-circle me-2" style="color: var(--color-institutional);"></i>Nuevo Criterio
                                    </h6>
                                    <form id="formCriterio">
                                        <div class="mb-3">
                                            <label class="form-label small fw-bold text-muted text-uppercase" style="font-size: 0.75rem;">Periodo</label>
                                            <select class="form-select" id="cboPeriodoCriterio">
                                                <option value="1">Bimestre I</option>
                                                <option value="2">Bimestre II</option>
                                                <option value="3">Bimestre III</option>
                                                <option value="4">Bimestre IV</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label small fw-bold text-muted text-uppercase" style="font-size: 0.75rem;">Descripción</label>
                                            <input type="text" class="form-control" id="txtNombreCriterio" placeholder="Ej: Examen Parcial" required>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label small fw-bold text-muted text-uppercase" style="font-size: 0.75rem;">Peso (Ponderación)</label>
                                            <div class="input-group">
                                                <input type="number" step="0.05" min="0.05" max="1" class="form-control" id="txtPesoCriterio" placeholder="0.3" required>
                                                <span class="input-group-text bg-light text-muted small">Ej: 0.3 (30%)</span>
                                            </div>
                                            <div class="form-text text-muted small mt-2">
                                                <i class="fa-solid fa-circle-info me-1"></i>La suma total debe ser <strong>1.0</strong> por periodo.
                                            </div>
                                        </div>
                                        <button type="submit" class="btn text-white w-100 fw-bold py-2 shadow-sm" style="background-color: var(--color-institutional);">
                                            Agregar Criterio
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                                    <ul class="nav nav-pills nav-fill bg-light p-1 rounded-3" id="tabsPeriodos" role="tablist">
                                        <li class="nav-item"><button class="nav-link active small fw-bold rounded-3" id="tab-b1" data-bs-toggle="pill" data-bs-target="#panel-b1">Bimestre I</button></li>
                                        <li class="nav-item"><button class="nav-link small fw-bold rounded-3" id="tab-b2" data-bs-toggle="pill" data-bs-target="#panel-b2">Bimestre II</button></li>
                                        <li class="nav-item"><button class="nav-link small fw-bold rounded-3" id="tab-b3" data-bs-toggle="pill" data-bs-target="#panel-b3">Bimestre III</button></li>
                                        <li class="nav-item"><button class="nav-link small fw-bold rounded-3" id="tab-b4" data-bs-toggle="pill" data-bs-target="#panel-b4">Bimestre IV</button></li>
                                    </ul>
                                </div>
                                <div class="card-body px-4 pb-4">
                                    <div class="tab-content" id="contentPeriodos">
                                        <div class="tab-pane fade show active" id="panel-b1"></div>
                                        <div class="tab-pane fade" id="panel-b2"></div>
                                        <div class="tab-pane fade" id="panel-b3"></div>
                                        <div class="tab-pane fade" id="panel-b4"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalSubirMaterial" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Subir Material Didáctico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formSubirMaterial">
                    <div class="mb-3"><label class="form-label text-muted small fw-bold">Título</label><input type="text" class="form-control" id="txtTituloMaterial" required></div>
                    <div class="mb-4"><label class="form-label text-muted small fw-bold">Archivo</label><input type="file" class="form-control" id="fileMaterial" required></div>
                    <div class="d-grid"><button type="submit" class="btn text-white fw-bold" style="background-color: var(--color-institutional);">Subir Archivo</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCrearTarea" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Nueva Asignación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formCrearTarea">
                    <div class="mb-3"><label class="form-label text-muted small fw-bold">Título</label><input type="text" class="form-control" id="txtTituloTarea" required></div>
                    <div class="mb-3"><label class="form-label text-muted small fw-bold">Instrucciones</label><textarea class="form-control" id="txtDescTarea" rows="3"></textarea></div>
                    <div class="mb-4"><label class="form-label text-muted small fw-bold">Fecha Límite</label><input type="datetime-local" class="form-control" id="txtFechaTarea" required></div>
                    <div class="d-grid"><button type="submit" class="btn text-white fw-bold" style="background-color: var(--color-institutional);">Crear Tarea</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEntregas" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow">
            <div class="modal-header text-white" style="background-color: var(--color-institutional);">
                <h5 class="modal-title fw-bold fs-6">Revisión de Entregas</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light small text-uppercase text-muted">
                            <tr>
                                <th class="ps-4">Estudiante</th>
                                <th>Fecha Envio</th>
                                <th>Archivo</th>
                                <th style="width:100px;">Nota</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tabla-entregas"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalPromedios" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header text-white" style="background-color: var(--color-institutional);">
                <h5 class="modal-title fw-bold">Reporte de Tareas</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Alumno</th>
                                <th class="text-center">Entregas</th>
                                <th class="text-center">Puntos</th>
                                <th class="text-center fw-bold" style="color: var(--color-institutional);">Promedio</th>
                            </tr>
                        </thead>
                        <tbody id="tabla-promedios"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/docente/aula.js"></script>
}
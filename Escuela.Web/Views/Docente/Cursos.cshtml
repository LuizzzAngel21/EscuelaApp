@{
    ViewData["Title"] = "Mis Cursos";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold text-dark mb-1">
                <i class="fa-solid fa-book-open-reader me-2 text-primary"></i>Mis Cursos
            </h2>
            <p class="text-muted mb-0">Gestiona tus aulas, materiales y evaluaciones desde aquí.</p>
        </div>

        <div class="position-relative" style="min-width: 300px;">
            <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input type="text" id="txtBuscarCurso" class="form-control ps-5 py-2 rounded-pill border-0 shadow-sm" placeholder="Buscar por nombre o grado...">
        </div>
    </div>

    <div id="contenedor-cursos" class="row g-4">
        <div class="col-12 text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="text-muted mt-3">Cargando tus cursos asignados...</p>
        </div>
    </div>

    <div id="estado-vacio" class="text-center py-5 d-none">
        <div class="mb-3 text-muted opacity-50">
            <i class="fa-solid fa-folder-open fa-4x"></i>
        </div>
        <h5 class="fw-bold text-dark">No se encontraron cursos</h5>
        <p class="text-muted">No tienes cursos asignados o no coinciden con tu búsqueda.</p>
    </div>

</div>

@section Scripts {
    <script src="~/js/docente/cursos.js"></script>
}